<div class="row align-items-center mx-auto g-lg-5 py-5">
  <div class="col-12 col-md-10 mx-auto col-lg-5 p-4 p-md-5 card">

    <h2 class="mb-4">Connexion</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group mb-3">
        <%= f.label :email %><br />
        <%= f.text_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :mot_de_passe %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Connexion", class: "mt-4 btn btn-dark w-100 mb-3 rounded" %>
      </div>
    <% end %>

    <!-- change password -->
    <div class="text-center">
      <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class: "text-dark" %>
    </div>
  </div>
</div>
