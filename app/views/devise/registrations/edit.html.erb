<div class="row align-items-center mx-auto g-lg-5">
  <div class="col-12 col-md-10 mx-auto col-lg-5 p-md-4 card" style="margin-top: 240px;">
    <h2 class="mb-4">Mon compte</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group mb-3">
        <%= f.label :pseudo %><br />
        <%= f.text_field :username, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group mb-3">
        <%= f.label :mot_de_passe %> <i>(Laissez ce champ vide pour le laisser inchang√©)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
        <% end %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :confirmation_du_mot_de_passe %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :mot_de_passe_actuel %> <i>(nous avons besoin de votre mot de passe actuel pour valider vos modifications)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Modifier", class: "btn btn-dark w-100" %>
      </div>
    <% end %>
    <!--
    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    -->
  </div>
</div>
