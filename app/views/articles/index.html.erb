<!-- Page Header-->
<header class="masthead" style="background-image: url('https://i.postimg.cc/9fLv4SWd/supply-page-message-list-brown.jpg')">
  <div class="container position-relative px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        <div class="site-heading">
          <h1>Clean Blog</h1>
          <span class="subheading">Thème réalisé avec Bootstrap</span>
        </div>
      </div>
    </div>
  </div>
</header>
<!-- Main Content-->
<div class="container px-4 px-lg-5">
  <div class="row gx-4 gx-lg-5 justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-7">
      <!-- Search form-->
      <%= form_with(url: articles_path, method: :get, local: true) do %>
        <div class="input-group">
          <%= text_field_tag(:search, params[:search], class: "form-control", placeholder: "Rechercher...") %>
          <div class="input-group-append">
            <%= submit_tag('Rechercher', class: "btn btn-primary rounded", type: "submit") %>
          </div>
        </div>
      <% end %>
      <!-- Post preview-->
      <% @articles.each do |article| %>
        <div class="post-preview">

          <!-- <%= link_to article.title, article_path(article) %> -->
          <a href="<%= article_path(article) %>">
            <h2 class="post-title"><%= article.title %></h2>
            <h3 class="post-subtitle"><%=  article.subtitle %></h3>
          </a>
          <p class="post-meta">
            Posté par
            <a><%= article.user.username %></a>
            le <%= article.created_at.strftime("%d/%m/%Y") %>
          </p>
        </div>
        <hr class="my-4" />
        <!-- Pager-->
      <% end %>
      <div class="d-flex justify-content-end mb-4">
        <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    </div>
  </div>
</div>
<%= render "partials/scroll_to_top" %>
