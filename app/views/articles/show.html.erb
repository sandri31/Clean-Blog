<header class="masthead" style="background-image: url('https://i.postimg.cc/fRmHnPtz/letterbgc4a01ad19-1920.jpg')">
  <div class="container position-relative px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        <div class="post-heading">
          <h1><%= @article.title %></h1>
          <h2 class="subheading"><%= @article.subtitle %></h2>
          <span class="readingtime">Temps de lecture estimé – <%= @article.body.to_plain_text.reading_time :format => :approx %></span>
        </div>
      </div>
    </div>
  </div>
</header>
<div class="progress  progress_bar">
  <%= content_tag(:div, "", class: "progress-bar", data: {controller: "progress" }) %>
</div>
<!-- Post Content-->
<article class="mb-4">
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        <div class="d-flex">
          <%= render "admin_article_buttons" %>
        </div>
        <%= @article.body %>
        <br />
        <%= @article.image if @article.image.attached? %>
        <span class="meta">
          Posté par
          <a href="<%= contact_path %>"><%= @article.user.username %></a>
          le <%= @article.created_at.strftime("%d/%m/%Y") %>
        </span>
        <div class="d-flex justify-content-between mt-4">
          <%= link_to "Retour à l'accueil", articles_path, class: "btn btn-primary rounded me-5" %>
          <%= render "admin_article_buttons" %>
        </div>
      </div>
    </div>
  </div>
</article>
<%= render "partials/scroll_to_top" %>
