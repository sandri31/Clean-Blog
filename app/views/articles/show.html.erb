<header class="masthead" style="background-image: url('https://i.postimg.cc/fRmHnPtz/letterbgc4a01ad19-1920.jpg')">
  <div class="container position-relative px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        <div class="post-heading">
          <h1><%= @article.title %></h1>
          <h2 class="subheading"><%= @article.subtitle %></h2>
          <span class="readingtime">Temps de lecture estimé – <%= @article.body.to_plain_text.reading_time :format => :approx %></span>
        </div>
      </div>
    </div>
  </div>
</header>
<div class="progress  progress_bar">
  <%= content_tag(:div, "", class: "progress-bar", data: {controller: "progress" }) %>
</div>
<!-- Post Content-->
<article class="mb-4">
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        <%= @article.body %>
        <br />
        <% @article.image %>
        <span class="meta">
          Posté par
          <a href="<%= contact_path %>"><%= @article.user.username %></a>
          le <%= @article.created_at.strftime("%d/%m/%Y") %>
        </span>
      </div>
    </div>
  </div>
</article>
<% if current_user && current_user.admin? %>
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        <div class="d-flex justify-content-between">
          <div>
            <%= link_to "Editer l'article", edit_article_path(@article), class: "btn btn-primary" %>
          </div>
          <div>
            <%= link_to "Suprimer cet article", article_path(@article), class: "btn btn-xs btn-danger", data: { "turbo-method": :delete, "turbo-confirm": "Etes-vous sûr?" } %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= render "partials/scroll_to_top" %>
